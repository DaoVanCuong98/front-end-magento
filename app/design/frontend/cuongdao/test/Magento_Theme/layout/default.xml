<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    
        <referenceContainer name="top.links" remove = "true" ></referenceContainer>
        
        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template" name="top-header" template="Magento_Theme::html/top-header.phtml"/>
        </referenceContainer>

        <referenceContainer name="header-wrapper">
            <container name = "logo-search">
                <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
                    <arguments>
                        <argument name="logoPathResolver" xsi:type="object">Magento\Theme\ViewModel\Block\Html\Header\LogoPathResolver</argument>
                        <argument name="logo_size_resolver" xsi:type="object">Magento\Theme\ViewModel\Block\Html\Header\LogoSizeResolver</argument>
                    </arguments>
                </block>
            </container> 
           <container name = "move-links">
                
           </container>
        </referenceContainer>
            <move element="register-link" destination="move-links"/>
            <move element="authorization-link" destination="move-links"/>
            <move element="minicart" destination="move-links"/>
      
        <referenceContainer name="main">
            <container name = "start-end">
                <block class="Magento\Framework\View\Element\Template" name="hero-banner" template="Magento_Theme::html/hero-banner.phtml"/>
                <block class="Magento\Framework\View\Element\Template" name="feature" template="Magento_Theme::html/feature.phtml"/>
                <block class="Magento\Framework\View\Element\Template" name="top-category" template="Magento_Theme::html/top-category.phtml"/>
                <block class="Magento\Framework\View\Element\Template" name="product-card" template="Magento_Theme::html/product-card.phtml"/>
                <block class="Magento\Framework\View\Element\Template" name="banners" template="Magento_Theme::html/banners.phtml"/>
                <block class="Magento\Framework\View\Element\Template" name="seller" template="Magento_Theme::html/seller.phtml"/>
           </container>
        </referenceContainer> 

    
</page>